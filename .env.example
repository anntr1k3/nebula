# Конфигурация Nebula Chat
# Скопируйте этот файл в .env и настройте под свои нужды

# Окружение (development, production, testing)
FLASK_ENV=development

# Режим отладки (True/False)
FLASK_DEBUG=False

# Секретный ключ для сессий (ОБЯЗАТЕЛЬНО измените в продакшене!)
# Сгенерируйте новый ключ командой: python scripts/generate_secret_key.py
SECRET_KEY=dev-secret-key-change-in-production

# База данных
# SQLite (по умолчанию) - хранится в папке instance
DATABASE_URL=sqlite:///instance/chat.db
# PostgreSQL (для продакшена)
# DATABASE_URL=postgresql://user:password@localhost/nebula_chat

# Сервер
HOST=127.0.0.1
PORT=5000

# Безопасность
MAX_MESSAGE_LENGTH=500
RATE_LIMIT=30

# CORS (разрешенные источники для WebSocket)
# В разработке укажите локальные адреса
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000
# В продакшене укажите конкретные домены
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Логирование
LOG_LEVEL=INFO
# Возможные значения: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Автоматическая очистка старых сообщений
# Установите количество дней для хранения сообщений
# 0 = отключено (сообщения хранятся вечно)
# 90 = удалять сообщения старше 90 дней
MAX_MESSAGE_AGE_DAYS=0
